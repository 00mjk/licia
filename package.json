  },
  "homepage": "https://github.com/liriliri/eris#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "chalk": "^1.1.3",
    "eustia": "^0.3.3",
    "eustia-component": "0.0.3",
    "glob": "^7.0.3",
    "handlebars": "^4.0.5",
    "karma": "^0.13.22",
    "karma-chai-plugins": "^0.7.0",
    "karma-coverage": "^1.1.1",
    "karma-jquery": "^0.1.0",
    "karma-mocha": "^0.2.2",
    "karma-phantomjs-launcher": "^1.0.2",
    "karma-sauce-launcher": "^1.1.0",
    "mocha": "^2.4.5",
    "nopt": "^3.0.6",
