{
  "name": "licia",
  "version": "1.8.0",
  "description": "Useful utility collection with zero dependencies",
  "bin": {
    "licia": "./bin/licia.js"
  },
  "scripts": {
    "postinstall": "node ./lib/setup",
    "ci": "npm run lint && npm run pack && npm run lint:release && npm test",
    "update": "licia update",
    "pack": "licia pack && npm run format:pkg && copyfiles -u 2 .licia/packages/**/* ./node_modules",
    "lint": "eslint -c eslint.src.js src/$/*.js src/[a-z]/*.js",
    "lint:fix": "npm run lint -- --fix",
    "lint:release": "eslint -c eslint.release.js .licia/packages/licia-src/*.js --no-ignore",
    "serveDemo": "nws -p 3000 -d .licia/demo",
    "test": "npm run test:node && npm run test:browser && npm run test:release && npm run test:ts",
    "demo": "licia test -ad",
    "karma": "karma",
    "mocha": "mocha",
    "format": "prettier src/$/*.js src/[a-z]/*.js *.js lib/**/*.js lib/*.js bin/*.js script/*.js --write",
    "format:pkg": "prettier .licia/packages/**/*.js .licia/packages/**/*.d.ts .licia/packages/**/**/*.js --write",
    "test:node": "licia test -as",
    "test:browser": "licia test -bas",
    "test:release": "licia test -r",
    "test:sauce": "licia test -bas --sauce",
    "test:ts": "licia test -as --ts && tsc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/liriliri/licia.git"
  },
  "keywords": [
    "eustia"
  ],
  "author": "redhoodsu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/liriliri/licia/issues"
  },
  "homepage": "https://github.com/liriliri/licia#readme",
  "devDependencies": {
    "@babel/core": "^7.5.5",
    "@babel/plugin-transform-arrow-functions": "^7.2.0",
    "@babel/plugin-transform-block-scoping": "^7.5.5",
    "@babel/plugin-transform-destructuring": "^7.5.0",
    "@babel/plugin-transform-parameters": "^7.4.4",
    "@babel/plugin-transform-shorthand-properties": "^7.2.0",
    "@babel/plugin-transform-template-literals": "^7.4.4",
    "@types/node": "^12.7.2",
    "beautify-benchmark": "^0.2.4",
    "benchmark": "^2.1.4",
    "chai": "^4.2.0",
    "copyfiles": "^2.1.1",
    "eslint": "^6.2.2",
    "eustia": "^0.7.5",
    "eustia-component": "^0.0.3",
    "execa": "^2.0.4",
    "glob": "^7.1.4",
    "handlebars": "^4.1.2",
    "karma": "^4.3.0",
    "karma-chai-plugins": "^0.9.0",
    "karma-chrome-launcher": "^3.1.0",
    "karma-coverage": "^2.0.1",
    "karma-jquery": "^0.2.4",
    "karma-mocha": "^1.3.0",
    "karma-sauce-launcher": "^2.0.2",
    "mocha": "^6.2.0",
    "ncp": "^2.0.0",
    "nws": "^1.1.1",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "promises-aplus-tests": "^2.1.2",
    "request": "^2.88.0",
    "sinon": "^7.4.1",
    "typescript": "^3.6.2",
    "underscore": "^1.9.1",
    "uuid": "^3.3.3"
  }
}
