{
  "name": "eris",
  "version": "0.0.1",
  "description": "Eustia modules",
  "bin": {
    "eris": "./bin/eris.js"
  },
  "scripts": {
    "update": "eris list && eris doc",
    "pack": "eris pack",
    "lint": "eslint $ [a-z]",
    "serve": "nws -p 3000 -d testHtml",
    "test": "npm run test:node && npm run test:browser",
    "cov": "istanbul cover ./node_modules/mocha/bin/_mocha",
